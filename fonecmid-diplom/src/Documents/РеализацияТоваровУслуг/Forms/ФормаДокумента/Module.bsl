//++__ВКМ
&НаСервере
Процедура ЗаполнениеДоговора() 
	
	Если Объект.Договор.ВидДоговора = Перечисления.ВидыДоговоровКонтрагентов.ВКМ_АбонентскаяПлата Тогда 
		
		Документ = РеквизитФормыВЗначение("Объект");
		Документ.ВыполнитьАвтозаполнение();
		ЗначениеВРеквизитФормы(Документ,"Объект")	
		
	КонецЕсли;

КонецПроцедуры  
