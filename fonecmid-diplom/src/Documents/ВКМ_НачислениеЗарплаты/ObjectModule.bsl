
Процедура ОбработкаПроведения(Отказ, Режим)
	
	
	ФормированиеДвиженийОклад();
	ФормированиеДвиженийОтпуск();
	
	Движения.ВКМ_ОсновныеНачисления.Записать(); 
	Движения.ВКМ_Удержания.Записать();
	
	РасчетОклада();
	РасчетОтпуска(); 
	
	ФормированиеДвиженийВзаиморасчетыССотрудниками();
	
КонецПроцедуры  

Процедура ФормированиеДвиженийОклад()
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ЕСТЬNULL(ВКМ_УсловияОплатыСотрудниковСрезПоследних.Оклад, 0) КАК Оклад,
	|	ВКМ_НачислениеЗарплатыНачисления.Сотрудник КАК Сотрудник,
	|	ВКМ_НачислениеЗарплатыНачисления.ВидРасчета КАК ВидРасчета,
	|	ВКМ_НачислениеЗарплатыНачисления.ДатаНачала КАК ДатаНачала,
	|	ВКМ_НачислениеЗарплатыНачисления.ДатаОкончания КАК ДатаОкончания,
	|	ВКМ_НачислениеЗарплатыНачисления.ГрафикРаботы КАК ГрафикРаботы,
	|	ЕСТЬNULL(ВКМ_УсловияОплатыСотрудниковСрезПоследних.ПроцентОтРабот, 0) КАК ПроцентОтРабот
	|ПОМЕСТИТЬ ВТ
	|ИЗ
	|	Документ.ВКМ_НачислениеЗарплаты.Начисления КАК ВКМ_НачислениеЗарплатыНачисления
	|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.ВКМ_УсловияОплатыСотрудников.СрезПоследних(&Период, ) КАК ВКМ_УсловияОплатыСотрудниковСрезПоследних
	|		ПО ВКМ_НачислениеЗарплатыНачисления.Сотрудник = ВКМ_УсловияОплатыСотрудниковСрезПоследних.Сотрудник
	|ГДЕ
	|	ВКМ_НачислениеЗарплатыНачисления.Ссылка = &Ссылка
	|	И ВКМ_НачислениеЗарплатыНачисления.ВидРасчета = &ВидРасчета
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ВТ.Оклад КАК Оклад,
	|	ВТ.Сотрудник КАК Сотрудник,
	|	ВТ.ВидРасчета КАК ВидРасчета,
	|	ВТ.ДатаНачала КАК ДатаНачала,
	|	ВТ.ДатаОкончания КАК ДатаОкончания,
	|	ВТ.ГрафикРаботы КАК ГрафикРаботы,
	|	ВТ.ПроцентОтРабот КАК ПроцентОтРабот,
	|	ЕСТЬNULL(ВКМ_ВыполненныеСотрудникомРаботыОбороты.СуммаКОплатеОборот, 0) КАК СуммаВыпРаб
	|ИЗ
	|	ВТ КАК ВТ
	|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрНакопления.ВКМ_ВыполненныеСотрудникомРаботы.Обороты(, , День, ) КАК ВКМ_ВыполненныеСотрудникомРаботыОбороты
	|		ПО (ВКМ_ВыполненныеСотрудникомРаботыОбороты.Период МЕЖДУ ВТ.ДатаНачала И ВТ.ДатаОкончания
	|				И ВТ.Сотрудник = ВКМ_ВыполненныеСотрудникомРаботыОбороты.Сотрудник)";
	
	Запрос.УстановитьПараметр("Ссылка", Ссылка);
	Запрос.УстановитьПараметр("Период", Дата);
	Запрос.УстановитьПараметр("ВидРасчета", ПланыВидовРасчета.ВКМ_ОсновныеНачисления.Оклад);
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Выборка = РезультатЗапроса.Выбрать();
	
	Пока Выборка.Следующий() Цикл 
		
		Если Выборка.СуммаВыпРаб > 0 Тогда 
			
			Движение = Движения.ВКМ_ОсновныеНачисления.Добавить();
			Движение.ВидРасчета = Выборка.ВидРасчета;
			Движение.ПериодДействияНачало = Выборка.ДатаНачала;
			Движение.ПериодДействияКонец = КонецДня(Выборка.ДатаОкончания);
			Движение.ПериодРегистрации = Дата;
			Движение.Сотрудник = Выборка.Сотрудник;
			Движение.Процент = Выборка.ПроцентОтРабот;			
			Движение.Оклад = Выборка.Оклад; 
			
			ДвижениеДопВып = Движения.ВКМ_ОсновныеНачисления.Добавить();
			ДвижениеДопВып.ВидРасчета = Выборка.ВидРасчета;
			ДвижениеДопВып.ПериодДействияНачало = Выборка.ДатаНачала;
			ДвижениеДопВып.ПериодДействияКонец = КонецДня(Выборка.ДатаОкончания);
			ДвижениеДопВып.ПериодРегистрации = Дата;
			ДвижениеДопВып.Сотрудник = Выборка.Сотрудник;
			ДвижениеДопВып.ВыпРаб = Выборка.СуммаВыпРаб;			
			
			
			ДвижениеНДФЛДопВып = Движения.ВКМ_Удержания.Добавить();
			ДвижениеНДФЛДопВып.ПериодРегистрации = Дата;
			ДвижениеНДФЛДопВып.ВидРасчета = ПланыВидовРасчета.ВКМ_Удержания.НДФЛ_13;
			ДвижениеНДФЛДопВып.Сотрудник = Выборка.Сотрудник;
			ДвижениеНДФЛДопВып.ВидУдержания = Выборка.ВидРасчета;
			
			ДвижениеНДФЛ = Движения.ВКМ_Удержания.Добавить();
			ДвижениеНДФЛ.ПериодРегистрации = Дата;
			ДвижениеНДФЛ.ВидРасчета = ПланыВидовРасчета.ВКМ_Удержания.НДФЛ_13;
			ДвижениеНДФЛ.Сотрудник = Выборка.Сотрудник;
			ДвижениеНДФЛ.ВидУдержания = Выборка.ВидРасчета;
			
		Иначе 
			
			Движение = Движения.ВКМ_ОсновныеНачисления.Добавить();
			Движение.ВидРасчета = Выборка.ВидРасчета;
			Движение.ПериодДействияНачало = Выборка.ДатаНачала;
			Движение.ПериодДействияКонец = КонецДня(Выборка.ДатаОкончания);
			Движение.ПериодРегистрации = Дата;
			Движение.Сотрудник = Выборка.Сотрудник;
			Движение.Процент = Выборка.ПроцентОтРабот;			
			Движение.Оклад = Выборка.Оклад; 
			
			ДвижениеНДФЛ = Движения.ВКМ_Удержания.Добавить();
			ДвижениеНДФЛ.ПериодРегистрации = Дата;
			ДвижениеНДФЛ.ВидРасчета = ПланыВидовРасчета.ВКМ_Удержания.НДФЛ_13;
			ДвижениеНДФЛ.Сотрудник = Выборка.Сотрудник;
			ДвижениеНДФЛ.ВидУдержания = Выборка.ВидРасчета;
			
		КонецЕсли;
		
	КонецЦикла;	
	
КонецПроцедуры 

